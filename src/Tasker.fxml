      <ListView id="taskListView" fx:id="taskListView" layoutY="2.0" prefHeight="361.0" prefWidth="98.0" />
      <DatePicker id="taskDatePicker" fx:id="taskDatePicker" layoutX="257.0" layoutY="10.0" />
      <ColorPicker id="taskColorPicker" fx:id="TaskColorPicker" layoutX="431.0" layoutY="10.0" />
